<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditData_Show">

    <EditText
        android:id="@+id/editText_EditDataActivity"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:inputType="textPersonName"
        android:text="Name"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/textView_EditDataActivity"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/editText_EditDataField1"
        />

    <EditText
        android:id="@+id/editText_EditDataField1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:inputType="textPersonName"
        android:text="Name"
        app:layout_constraintTop_toBottomOf="@id/editText_EditDataActivity"
        app:layout_constraintLeft_toRightOf="@id/textView_EditDataField1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/editText_EditDataField2" />

    <EditText
        android:id="@+id/editText_EditDataField2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:inputType="textPersonName"
        android:text="Name"
        app:layout_constraintTop_toBottomOf="@id/editText_EditDataField1"
        app:layout_constraintLeft_toRightOf="@id/textView_EditDataField2"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/button_update" />

    <Button
        android:id="@+id/button_update"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="Update"
        app:layout_constraintTop_toBottomOf="@id/editText_EditDataField2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/button_cancel" />

    <Button
        android:id="@+id/button_cancel"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="Cancel"
        app:layout_constraintTop_toBottomOf="@id/button_update"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <TextView
        android:id="@+id/textView_EditDataActivity"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="Activity"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/textView_EditDataField1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/editText_EditDataActivity"/>

    <TextView
        android:id="@+id/textView_EditDataField1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="Field 1"
        app:layout_constraintTop_toBottomOf="@id/textView_EditDataActivity"
        app:layout_constraintBottom_toTopOf="@id/textView_EditDataField2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/editText_EditDataField1" />

    <TextView
        android:id="@+id/textView_EditDataField2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="Field 2"
        app:layout_constraintTop_toBottomOf="@id/textView_EditDataField1"
        app:layout_constraintBottom_toTopOf="@id/button_update"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/editText_EditDataField2" />
</android.support.constraint.ConstraintLayout>